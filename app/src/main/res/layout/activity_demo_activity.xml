<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ActivityDemoActivity">

    <Button
        android:text="open next Activity"
        android:onClick="openNextActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="Abnormal State"
        android:onClick="openAbnormalStateActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="Abnormal State2"
        android:onClick="openAbnormalState2Activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Launch Mode"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <Button
        android:text="Start standard mode Activity"
        android:onClick="openStandardActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="Start single top Activity"
        android:onClick="openSingleTopActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="Start single task Activity"
        android:onClick="openSingleTaskActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="Start single instance Activity"
        android:onClick="openSingleInstanceActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="Start Activity in Flags"
        android:onClick="openActivityWithFlags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>